{
  "name": "wrelik-kit",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/lwhite702/wrelik-kit.git"
  },
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "typecheck": "turbo typecheck",
    "check:workspace-integrity": "node scripts/check-workspace-integrity.mjs",
    "check:runtime-contracts": "node scripts/check-runtime-contracts.mjs",
    "check:bundles": "node scripts/check-bundles.mjs",
    "check:cycles": "depcruise --config .dependency-cruiser.cjs packages",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "changeset",
    "version": "changeset version",
    "publish": "changeset publish",
    "check:circular-deps": "node scripts/check-circular-deps.js",
    "check:bundle-scan": "node scripts/scan-bundles.js",
    "check:smoke-test": "node scripts/smoke-test.js",
    "check:all": "pnpm check:circular-deps && pnpm check:smoke-test && pnpm check:bundle-scan"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "dependency-cruiser": "^16.10.4",
    "@turbo/gen": "^1.12.4",
    "@wrelik/eslint-config": "workspace:^",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "turbo": "^2.3.3",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
