{
  "name": "@wrelik/analytics",
  "version": "0.2.1",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lwhite702/wrelik-kit.git",
    "directory": "packages/analytics"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js",
      "require": "./dist/server.cjs"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js",
      "require": "./dist/client.cjs"
    },
    "./shared": {
      "types": "./dist/shared.d.ts",
      "import": "./dist/shared.js",
      "require": "./dist/shared.cjs"
    },
    "./react-native": {
      "types": "./dist/react-native.d.ts",
      "import": "./dist/react-native.js",
      "require": "./dist/react-native.cjs"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/server.ts src/client.ts src/shared.ts src/react-native.ts --format cjs,esm --dts --clean",
    "lint": "eslint src/",
    "test": "vitest run --passWithNoTests"
  },
  "dependencies": {
    "@wrelik/errors": "workspace:*",
    "posthog-node": "^3.6.3",
    "posthog-js": "^1.203.0",
    "posthog-react-native": "^2.10.1"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "@wrelik/eslint-config": "workspace:*",
    "@wrelik/tsconfig": "workspace:*",
    "tsup": "^8.0.1",
    "vitest": "^1.2.2"
  },
  "peerDependencies": {
    "react-native": ">=0.70.0"
  },
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    }
  }
}
