{
  "name": "@wrelik/errors",
  "version": "0.2.1",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lwhite702/wrelik-kit.git",
    "directory": "packages/errors"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "react-native": "./dist/react-native.js",
      "browser": "./dist/client.js",
      "import": "./dist/server.js",
      "require": "./dist/server.cjs",
      "default": "./dist/server.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js",
      "require": "./dist/server.cjs"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js",
      "require": "./dist/client.cjs"
    },
    "./shared": {
      "types": "./dist/shared.d.ts",
      "import": "./dist/shared.js",
      "require": "./dist/shared.cjs"
    },
    "./react-native": {
      "types": "./dist/react-native.d.ts",
      "import": "./dist/react-native.js",
      "require": "./dist/react-native.cjs"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/server.ts src/client.ts src/shared.ts src/react-native.ts src/node.ts src/browser.ts --format cjs,esm --dts --clean",
    "lint": "eslint src/",
    "test": "vitest run --passWithNoTests"
  },
  "dependencies": {
    "@sentry/browser": "^10.38.0",
    "@sentry/node": "^7.101.1",
    "@sentry/react-native": "^5.19.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "@wrelik/eslint-config": "workspace:*",
    "@wrelik/tsconfig": "workspace:*",
    "tsup": "^8.0.1",
    "vitest": "^1.2.2"
  }
}
